@page
@model AuthorsModel

@{
    ViewData["Title"] = "Autorzy";
}

<!DOCTYPE html>
<html>
    <head>

    </head>

    <body>
        <h1>@ViewData["Title"]</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Authors[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Authors[0].DebutDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Authors[0].BookCount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Authors[0].BornDate)
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model?.Authors)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DebutDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookCount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BornDate)
                    </td>
                    <td>
                        <div class="input-group">
                            <a style="margin-right: 5px" asp-page="EditAuthor" asp-route-id="@item.Id" class="btn btn-outline-info">Edytuj</a>
                            <form asp-page-handler="delete" asp-route-id="@item.Id" method="post">
                                <button class="btn btn-outline-danger">Usuń</button>
                            </form>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        <p>
            <a asp-page="CreateAuthor" class="btn btn-primary">Dodaj</a>
        </p>
    </body>
</html>