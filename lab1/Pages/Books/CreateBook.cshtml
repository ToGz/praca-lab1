@page
@model lab1.Pages.Books.CreateModel

@{
    ViewData["Title"] = "Dodaj Książkę";
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>@ViewData["Title"]</title>
    </head>

    <body>
        <h1>@ViewData["Title"]</h1>     
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <partial name="_CreateEditBookPartial.cshtml" model="@Model.Book" />
                    <div class="form-group">
                        <input type="submit" value="Dodaj" class="btn btn-primary" />
                        <a asp-page="IndexBooks" class="btn btn-outline-warning">Powrót</a>
                    </div>
                </form>
            </div>
        </div>
    </body>
</html>