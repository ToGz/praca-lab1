@page
@model lab1.Pages.Guests.CreateModel

@{
    ViewData["Title"] = "Dodaj Gościa";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dodaj Gościa</title>
</head>
<body>
    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Guest.Name" class="control-label"></label>
                    <input asp-for="Guest.Name" class="form-control" />
                    <span asp-validation-for="Guest.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Guest.Surname" class="control-label"></label>
                    <input asp-for="Guest.Surname" class="form-control" />
                    <span asp-validation-for="Guest.Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Guest.TimesVisited" class="control-label"></label>
                    <input asp-for="Guest.TimesVisited" class="form-control" />
                    <span asp-validation-for="Guest.TimesVisited" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Dodaj" class="btn btn-primary" />
                    <a asp-page="Index" class="btn btn-outline-warning">Powrót</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
