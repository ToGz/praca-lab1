@page
@model lab1.Pages.Opinions.CreateModel

@{
    ViewData["Title"] = "Dodaj Komentarz";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Opinion.Comment" class="control-label"></label>
                    <input asp-for="Opinion.Comment" class="form-control" />
                    <span asp-validation-for="Opinion.Comment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Opinion.Rating" class="control-label"></label>
                    <input asp-for="Opinion.Rating" class="form-control" />
                    <span asp-validation-for="Opinion.Rating" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Dodaj" class="btn btn-primary" />
                    <a asp-page="Index" class="btn btn-outline-warning">Powrót</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
