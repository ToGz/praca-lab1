@page
@model lab1.Pages.Opinions.DeleteModel

@{
    ViewData["Title"] = "Usuń Komentarz";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
</head>
<body>

    <h1>@ViewData["Title"]</h1>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Opinion.Comment)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Opinion.Comment)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Opinion.Rating)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Opinion.Rating)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Opinion.Id" />
            <input type="submit" value="Usuń" class="btn btn-danger" />
            <a asp-page="./Index" class="btn btn-outline-warning">Powrót</a>
        </form>
    </div>
</body>
</html>
