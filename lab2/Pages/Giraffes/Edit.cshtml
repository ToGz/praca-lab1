@page
@model lab2.Pages.Giraffes.EditModel

@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Program> Localizer

@{
    ViewData["Title"] = Localizer["Edit"];
}

<h1>@Localizer["Edit"]</h1>

<h4>@Localizer["Giraffes"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Giraffe.Name" class="control-label"></label>
                <input asp-for="Giraffe.Name" class="form-control" />
                <span asp-validation-for="Giraffe.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Giraffe.Weight" class="control-label"></label>
                <input asp-for="Giraffe.Weight" class="form-control" />
                <span asp-validation-for="Giraffe.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Giraffe.Age" class="control-label"></label>
                <input asp-for="Giraffe.Age" class="form-control" />
                <span asp-validation-for="Giraffe.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Giraffe.NeckLength" class="control-label"></label>
                <input asp-for="Giraffe.NeckLength" class="form-control" />
                <span asp-validation-for="Giraffe.NeckLength" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Giraffe.NumberOfDots" class="control-label"></label>
                <input asp-for="Giraffe.NumberOfDots" class="form-control" />
                <span asp-validation-for="Giraffe.NumberOfDots" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Giraffe.Id" />
            <div class="form-group">
                <input type="submit" value="@Localizer["Save"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">@Localizer["Back"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
